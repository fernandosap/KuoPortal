  <section id="contact" class="parallax-section">
     <div class="container">
          <div class="row">

               <div class="col-md-12 col-sm-12">
                    <!-- SECTION TITLE -->
                    <div class="wow fadeInUp section-title text-center" data-wow-delay="0.2s">
                         <h2>Crear pedido de Venta</h2>
                          <p class="lead">Completa la forma para poder ingresar un pedido de Venta directo al ERP.</p>
                          <br>
                    </div>
               </div>

               <div class="forma col-md-12 col-sm-12 text-center">
                    <!-- CONTACT FORM HERE -->
                    <div class="wow fadeInUp" data-wow-delay="0.4s">
                        <form id="contact-form" action="#" method="post">
                              <div class="input">
                                    <h5>Empleado:</h5>
                                   <input type="text" class="form-control" name="name" value="Vendedor KUO" required="" disabled>
                              </div>
                              <br>
                              <div class="input">
                                    <h5>Cliente:</h5>
                                   <select class="form-control" id="dropdown_cliente">
                                    <option>Cliente 1</option>
                                    <option>Cliente 2</option>
                                    <option>Cliente 3</option>
                                    <option>Cliente 4</option>
                                    <option>Cliente 5</option>
                                  </select>
                              </div>
                              <br>
                              <div class="input">
                                <h5>Fecha de Entrega Solicitada:</h5>
                                <input type="date" name="fecha_de_entrega">
                              </div>
                              <br>
                              <div class="input">
                                   <h5>Producto:</h5>
                                   <select class="form-control" id="dropdown_cliente">
                                    <option>Producto 1</option>
                                    <option>Producto 2</option>
                                    <option>Producto 3</option>
                                    <option>Producto 4</option>
                                    <option>Producto 5</option>
                                  </select>
                              </div>
                              <br>
                              <div class="input">
                                   <h5>Cantidad:</h5>
                                   <input type="text" name="cantidad">
                              </div>
                              <br>
                              <div>
                                   <button id="submit" type="submit" class="btn btn-lg btn-primary" name="submit">Crear Pedido</button>
                              </div>
                        </form>
                    </div>
               </div>
          </div>
     </div>
</section>


<!-- modal de confirmación de reserva -->

<div class="modal fade" id="modalConfirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Congratulations!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="text-center" id="MensajeModalConfirmacion"> 
          <p><b>Your resevation has been succesfully saved. </b></p>
        </div>
        <div>
        <p class="text-center" id="direccion_gmaps_boton"><a class="btn btn-success text-center" href="#" target="_blank" id="direccion_gmaps">Take me there!</a></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

